# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /admin/index                controllers.Admin.index
GET     /invitee/list               controllers.api.InviteeController.list
POST    /invitee/action             controllers.api.InviteeController.action
GET     /invitee/get/:id            controllers.api.InviteeController.get(id: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
