# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /admin/index                controllers.Admin.index
GET     /invitee/add                controllers.api.InviteeController.add
GET     /invitee/get/:id            controllers.api.InviteeController.get(id: String)
GET     /invitee/list               controllers.api.InviteeController.list
GET     /invitee/update             controllers.api.InviteeController.update

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
