# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /health                     controllers.Health.index

POST    /guestbook/add              controllers.api.GuestbookController.add
GET     /guestbook/list             controllers.api.GuestbookController.list                 

# Admin page
GET     /admin/index                controllers.Admin.index
GET     /admin/add                  controllers.Admin.add
GET     /invitee/list               controllers.api.InviteeController.list
POST    /invitee/add                controllers.api.InviteeController.add
GET     /invitee/get/:id            controllers.api.InviteeController.get(id: String)
GET     /invitee/total              controllers.api.InviteeController.total

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
